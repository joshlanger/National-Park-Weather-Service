@model ResultsView
@{
    ViewData["Title"] = "Favorite";
}

<h2>Favorite</h2>

@foreach(var survey in Model.AllSurveys)
{
<div style="display:flex; justify-content:space-around; padding:20px">
    <a asp-controller="Home" asp-action="Detail" asp-route-id="@(survey.ParkCode)" method="get">
        <img style="padding-right:20px" src="~/images/@(survey.ParkCode).jpg" />
    </a>
    <div style="display:flex; flex-direction:column; justify-content:space-between">
        <h1>@survey.ParkName</h1>
        <h3>Number of Votes: @survey.Votes</h3>
    </div>
</div>
}

